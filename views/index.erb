<form class="pure-form" action='/new' method='post'>
  <fieldset>
    <legend>新しいメモを追加</legend>

    <input type="text" name='title' placeholder="タイトル">
    <input type="text" name='body' placeholder="内容">

    <label for="categories">カテゴリ</label>
    <select id="categories" name="category">
      <option></option>
    </select>

    <button type="submit" class="pure-button pure-button-primary">追加</button>
  </fieldset>
</form>

<div class="ui cards" >
  <% @contents.each do |content| %>
  <div class="ui card">
    <div class="content">
      <div class="header">
        <%= content.title %>
      </div>
      <div class="meta">
        <%= content.body %>
      </div>
    </div>
    <div class="content">
      <div class="description">
        <%= content.body %>
      </div>
    </div>
    <div class="extra content">
      <button class="ui button">
        <a href="/edit/<%= content.id %>">Edit</a></button>
      <button class="ui button">
        <a href="/delete/<%= content.id %>">Delete</a></button>
    </div>
  </div>
  <% end %>
</div>

